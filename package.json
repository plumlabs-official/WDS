{
  "name": "wellwe-design-system-automator",
  "version": "2.0.0",
  "description": "Wellwe 디자인 시스템 자동화 Figma 플러그인",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@wellwe/common && npm run build --workspace=@wellwe/figma-plugin",
    "build:all": "npm run build && npm run build --workspace=@wellwe/agent-server",
    "build:plugin": "npm run build --workspace=@wellwe/figma-plugin",
    "build:server": "npm run build --workspace=@wellwe/agent-server",
    "build:common": "npm run build --workspace=@wellwe/common",
    "watch": "npm run watch --workspace=@wellwe/figma-plugin",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "server": "npm run start --workspace=@wellwe/agent-server"
  },
  "keywords": [
    "figma",
    "plugin",
    "design-system",
    "auto-layout"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.3.0"
  }
}
